.musiclist-container {
  display: flex;
  align-items: center;
  padding: 14rpx 20rpx;
}

.musiclist-index {
  color: #888;
  width: 80rpx;
}

.musiclist-info {
  flex-grow: 1;
  width: 0;
}

.musiclist-name {
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.musiclist-alia {
  color: #888;
  font-size: 28rpx;
}

.musiclist-singer {
  font-size: 24rpx;
  color: #888;
}

.selected view, .selected text {
  color: #d81e06;
}
