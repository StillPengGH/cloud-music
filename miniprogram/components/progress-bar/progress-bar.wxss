.progress-container{
  display: flex;
  align-items: center;
}

.progress-control{
  position: relative;
  flex: 1;
}

.m-area{
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -14rpx;
  left: 0;
}

.m-view{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #fefefe;
}

.time{
  width: 64rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255,255,255,1);
  line-height: 30rpx;
}