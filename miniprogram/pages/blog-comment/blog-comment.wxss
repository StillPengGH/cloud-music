.container {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 100rpx;
  background-color: #f1f1f1;
}

.blog-card {
  margin-bottom: 20rpx;
}

.blog-ctrl {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.blog-ctrl-content{
  width: 100%;
  height: 15rpx;
}

.comment-list {
  background-color: #fff;
  padding: 0 20rpx;
}

.title {
  width: 100%;
  padding: 20rpx 0rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.comment-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.avatar-name {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.name {
  margin-left: 20rpx;
  font-weight: 600;
}

.content {
  font-size: 28rpx;
  padding: 10rpx 0;
}

.time {
  color: #666;
  font-size: 24rpx;
}

.no-comment {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
}
