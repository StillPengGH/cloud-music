/* 模糊背景 */

.playmenu-cover {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
  position: relative;
}

.cover-img {
  width: 100%;
  height: 320rpx;
  filter: blur(8px);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.cover-task {
  width: 100%;
  height: 320rpx;
  background: #333;
  opacity: 0.5;
  position: absolute;
  top: 0;
  left: 0;
}

.top-content {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.top-img {
  width: 280rpx;
  height: 280rpx;
  margin: 20rpx 10rpx 0 20rpx;
}

.top-text {
  line-height: 1.5;
  font-weight: bold;
  color: #fff;
  position: absolute;
  left: 320rpx;
  top: 100rpx;
  right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /*只显示两行*/
  overflow: hidden;
  text-overflow: ellipsis; /*超出两行用...表示*/
}
