.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 340rpx;
  box-sizing: border-box;
}

.image-box {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.single-image {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  margin: 0 14rpx 14rpx 0;
}

.single-image .icon-close{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  font-weight: bold;
  font-size: 38rpx;
}

.image{
  width: 100%;
  height: 100%;
}

.choose {
  border: 1px dashed #cbd1d7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.single-image .icon-tianjia {
  color: #cbd1d7;
  font-size: 50rpx;
}

.footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: absolute;
  width: 100%;
  height: 100rpx;
  background-color: #f1f1f1;
  bottom: 0;
}

.footer-text {
  margin-right: 20rpx;
  color: #333;
}

.footer-btn {
  background-color: #0ec5a1;
  margin-right: 20rpx;
  padding: 10rpx 50rpx;
  color: #fff;
  border-radius: 6rpx;
}
