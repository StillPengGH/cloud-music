page {
  background-color: #f1f1f1;
}

.container {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  border: 0;
}

.header {
  position: relative;
  width: 100%;
  height: 450rpx;
  background-color: #0ec5a1;
}

.header-box {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.avatar-url {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
}

.nick-name {
  color: #fff;
  font-weight: bold;
}

.nav {
  margin: 50rpx 20rpx 0 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.nav-btn {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.iconfont {
  font-weight: bold;
}

.icon-ziyuanldpi, .icon-faxian, .icon-erweima {
  color: #0ec5a1;
  font-size: 40rpx;
  margin: 0 20rpx;
}

.txt {
  color: #333;
}

.icon-you {
  position: absolute;
  right: 40rpx;
  color: #333;
}
